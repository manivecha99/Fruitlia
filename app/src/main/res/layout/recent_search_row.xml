<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fruit_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@color/black"
            android:src="@drawable/mango"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/fruit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mango"
            android:textSize="26sp"
            android:layout_toRightOf="@+id/fruit_image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="serif"
            android:textColor="@color/purple_700"/>
        <TextView
            android:id="@+id/fruit_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="66 Cal per 100 g"
            android:layout_below="@+id/fruit_name"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/fruit_image"
            android:layout_marginStart="8dp"
            android:fontFamily="serif"
            android:textColor="#171717"/>
        <TextView
            android:id="@+id/fruit_nutrients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~ 3 g fiber.\n~ 24 g of sugar.\n~ 1 g protein.\n~ 257 mg potassium. "
            android:textSize="14sp"
            android:layout_below="@+id/fruit_calorie"
            android:layout_toRightOf="@+id/fruit_image"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:fontFamily="serif"
            android:textColor="#434345"/>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>